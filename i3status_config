general {
  colors = true
  color_good = "#19ff19"
  color_degraded = "#ebcb8b"
  color_bad = "#ff0000"
  interval = 1
  separator = "|"
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "memory"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet _first_ {
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery all {
        format = "%status %percentage %remaining"
        status_chr = âš¡
        status_bat = ðŸ”‹
}

disk "/" {
        prefix_type = "decimal"
        format = "%avail"
        format = "Disk: %used/%total (%percentage_used)"
}

load {
        format = "%1min"
}

memory {
        format = "Mem: %used/%available (%percentage_used)"
        threshold_degraded = "1G"
        format_degraded = "MEMORY < %available"
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

volume master {
        format = "â™ª: %volume"
        format_muted = "â™ª: muted (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}
