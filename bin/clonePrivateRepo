#!/bin/sh

USER="rfmajor"
EMAIL="rfmajor99@gmail.com"

if [ "$#" -lt 1 ]; then
    echo "Private repo name (without .git suffix):"
    read -r repoName
else
    repoName="$1"
fi

git clone git@pgit:"$USER"/"$repoName".git

cd "$repoName" || exit
git config remote.origin.url git@pgit:rfmajor/"$repoName".git
git config user.email "$EMAIL"
git config user.name "$USER"
